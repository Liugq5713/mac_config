#!/bin/bash

cd /Applications/dali-teacher.app/Contents/Resources

prod=https://h5.daliapp.net/teacher_pc/teacher

boe=https://h5-boe.daliapp.net/teacher_pc/teacher

dev=http://localhost:3000/teacher_pc/teacher

base=http://localhost:3000/teacher_pc/

b=boe
p=online

function mv_boe_config(){
	cp ~/bin/config/boe-config.json .
	rm config.json
	mv boe-config.json config.json
}

function mv_prod_config(){
	cp ~/bin/config/prod-config.json .
	rm config.json
	mv prod-config.json config.json
}

case $1 in
	dev) mv_boe_config 
		jq ".url=\"$dev\"" config.json | sponge config.json
		exit
		;;
	boe) mv_boe_config
		 jq ".env=\"$b\"" config.json | sponge config.json
		exit
		;;
	prod) mv_prod_config
		 jq ".env=\"$p\"" config.json | sponge config.json
		exit
		;;
	*)  mv_boe_config
	    jq ".url=\"$dev\"" config.json | sponge config.json
	    exit
	    ;;
esac

