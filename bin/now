#!/bin/zsh

#set -x
cd $HOME/now

COMMAND="${1}"


case $1 in
	e) filename=($(ls -t . | head -n 1))
		nvim $filename
		exit
		;;
	clear) rm -rf $(find . -empty)
		exit
		;;
	stat) echo $(ls -l | grep "^-" | wc -l)
		exit
		;;
	ls) files=($(ls -t . | head -n 10))
		for f in $files ; do
			echo -e "\033[37m"
			head $f
			echo -e "\e[90m-----"
		done
		exit
		;;
	*) filename=$(uuidgen)
    	touch $filename.md
		nvim $filename.md
		exit
		;;
esac




